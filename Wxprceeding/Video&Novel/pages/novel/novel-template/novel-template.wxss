.books-content{
  margin-top: 10rpx;
}

.book-container{
  display: flex;
  flex-direction: column;
  padding: 0 22rpx;
}

.book-viewimg{
  width: 200rpx;
  height: 270rpx;
  padding-bottom: 20rpx;
}

.book-content{
  margin-left: 10rpx;
  font-family: "仿宋";
}

.flex-row{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.book-title{
  margin-bottom: 16rpx;
  font-size: 10px;
  font-family: '黑体'
}

.book-char{
  font-family: "楷体";
  font-weight: 700;
  color: #965;
}

.bordersetting{
  margin-top: 20rpx;
  border-radius: 10%;
  background-color: #f9f9f9;
}

.book-summary{
  margin-top: 10rpx;
  font-size: 14px;
  font-weight: 300;
}

.book-content .btn{
  border: 1px solid #109059;
  margin: 20rpx 200rpx 0 0;
  padding: 5px 10px;
  border-radius: 5px;
  align-items: center;
}
.book-content .btn text{
  color: #109059;
}
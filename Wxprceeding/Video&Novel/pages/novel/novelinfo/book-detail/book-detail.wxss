/*文章细节整体  */
.book-detail-container{
  background-color: #d1d1d1
}

/*书籍信息  */
.book-info{
   /* margin: 10rpx;  */
   display: flex;
   flex-direction: row;
}

.head-img{
  width: 100%;
  height: 150px;
  filter: blur(10px);
}

.head-img-hover{
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 60px;
}

.main-title{
  font-size:14px;
  margin:0 20rpx;
  font-family:'黑体';
  font-weight:700;
  color:#505;
}

.sub-title{
  margin:40rpx 20rpx;
  font-size:12px;
  color:#265;  
  font-weight:600;
  font-family:'宋体';
}

.book-img{
  position:absolute;
  top:52px;
  right:30rpx;
  height:120px;
  width:80px;
}

.hr{
  width:100%;
  height:5rpx;
  background-color:#fff;
  color: #d1d1d1;
  position:relative;
  z-index: 99;
}

.mark{
  margin-right: 20rpx;
  color:#a1a1a1;
}

.synopsis{
  display:flex;
  flex-direction:column;
  margin:40rpx 30rpx;
  font-size: 12px;
}

.synopsis-font{
  color:#a1a1a1;
}

.summary-content{
  /* font-family:'华文新魏'; */
  margin-top: 20rpx;
  font-weight:600;
  padding: 2px;
}


.status-container{
  margin: 20rpx;
}

.original-title{
  margin:20rpx 0;
  font-family:'黑体';
  font-size:14px;
  font-weight:600;
}

.flex-row{
  display: flex;
  flex-direction: row;
}

.status{
  margin:10rpx 0;
  font-size:12px;
}
/*内容  */
.book-content{
  margin-top: 50px;
  font-family: "楷体";
}

.book-content text{
  vertical-align: middle;
}

.book-title{
  font-size: 24px;
  font-weight: 500;
}

.discription-container{
  margin: 20rpx;
}

.discription-content{
  font-size: 14px;
}

.charpter-container{
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-family: "仿宋";
  font-size: 12px;
}

.chapter-Content{
  width: 100%;
  color: #109059; 
  font-weight: 500;
  margin: 10rpx 20rpx auto 20rpx;
}

.chapter-time{
  margin: 5rpx 250rpx 5rpx 10rpx;
}

.btn-container{
  margin-top: 20rpx;
  margin-left: 160rpx; 
}

.btn{
  margin-left: 20rpx;
  border: 1px solid #109059;
  padding: 5px 10px;
  border-radius: 5px;
  color: #109059;
  font-size: 12px;
  font-family: '楷体';
}
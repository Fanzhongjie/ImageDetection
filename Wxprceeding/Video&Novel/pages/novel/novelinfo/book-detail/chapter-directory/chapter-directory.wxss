/* pages/index/book-detail/chapter-directory/chapter-directory.wxss */
.chapters-container{
  width: 100%;
  height: 100%;
  background-color: #bfe8bb;
}

.flex-row{
  display: flex;
  flex-direction: row
}

.biaoti{
  margin-left: 200rpx;
  font-family: '方正舒体';
  font-size: 20px;
  font-weight: 500
}

.standard-directory{
  margin-left: 10rpx;
}

.dire-container{
  margin-left: 150rpx;
}

.chapter-name{
  margin-left: 20rpx;
  margin-top: 10rpx;
  font-family: '楷体';
  font-size: 16px;
}

.hr{
  margin: 2rpx 20rpx;
  height:1rpx; 
  background-color:#a0c0a0;
  color: #bfe8bb;
  position:relative;
  z-index: 99;
}

.space{
  margin-left: 10rpx;
}

.btn{
  border: 1px solid #109059;
  padding: 5px 10px;
  border-radius: 5px;
  color: #109059;
  font-size: 12px;
  font-family: '楷体';
}

.hiddenin{
  display: none
}

.hiddened{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0; 
  background: #bfe8bb;
  opacity: 0.8;
  overflow: hidden;
  z-index: 999;
  color: #fff;
}

.showed{
  width: 50%;
  height: 50%;
  position: fixed;
  top: 300rpx;
  left: 150rpx;
  background: #bfe8bb;
  opacity: 1;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.syfont{
  color: black;
  font-family: '楷体';
  font-size: 16px;
  font-weight: 600
}